# Application Settings
APP_NAME="Charity Commission Data Enrichment Platform"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL
# For Railway: Use the DATABASE_URL provided by Railway Postgres plugin
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/charity_platform
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# JWT Authentication
# IMPORTANT: Generate a secure random key for production!
# python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API (for AI-powered entity matching)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Charity Commission API
# Register at: https://register-of-charities.charitycommission.gov.uk/
CHARITY_COMMISSION_API_BASE_URL=https://api.charitycommission.gov.uk/register/api
CHARITY_COMMISSION_API_KEY=your-charity-commission-api-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS - Add your frontend domains
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-app.pages.dev

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls

# Security
API_KEY_HEADER=X-API-Key
